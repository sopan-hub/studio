
{
  "manifest_version": 3,
  "name": "Web Gesture Control",
  "version": "1.0",
  "description": "Control your browser with hand gestures via your webcam.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Enable Gesture Control",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "page.js", "overlay.css" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
